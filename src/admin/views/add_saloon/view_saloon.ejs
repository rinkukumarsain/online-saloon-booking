<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>view-saloon</title>
  <%- include('../../partials/headlink.ejs') %>
</head>

<body>
  <%- include('../../partials/Header.ejs') %>
    <%- include("../../partials/sidebar.ejs") %>

      <main id="main" class="main">
        <div class="pagetitle">
          <h1><%-user.type %></h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->
        <section class="section dashboard">
          <div class="row">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Saloon List</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Store Name</th>
                          <th scope="col">Owner Name</th>
                          <th scope="col">Email</th>
                          <th scope="col">Phone Number</th>
                          <th>location</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0 %>
                          <% for( data of data) { %>
                            <tr>
                              <th scope="row">
                                <%= ++i %>
                              </th>
                              <td>
                                <%= data.storeName %>
                              </td>
                              <td>
                                <%= data.name %>
                              </td>
                              <td>
                                <%= data.Email %>
                              </td>
                              <td>
                                <%= data.PhoneNumber %>
                              </td>
                              <td>
                                <button type="button" value="<%=data._id%>" onclick="saloonAdd(this)"
                                  class="btn btn-info"><i class="bi bi-eye"></i></button>

                              </td>
                              <td><a href="/add_saloon?id=<%= data._id%>" class="btn btn-dark">Edit</a>
                                <a href="/delete_saloon?id=<%= data._id%>" class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                            <%}%>
                      </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                  </div>
                </div>
              </div>
            </div>

          </div>
        </section>

      </main>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">User Service Data</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="moduleDataAppend">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
          </div>
        </div>
      </div>


      <script>
        function saloonAdd(data) {
          let num = data.value
          $.ajax({
            type: 'get',
            data: { "id": num },
            url: '/get-saloon-address',
            success: function (data) {
              if (data.length > 0) {
                $('#moduleDataAppend').empty()
                let abc = ` <table class="table datatable">
                          <thead>
                            <tr>
                              <th scope="col">Shop Number</th>
                              <th scope="col">Pin Code</th>
                              <th scope="col">City</th>
                              <th scope="col">State</th>
                            </tr>
                          </thead>
                          <tbody>`
                data.forEach((item) => {
                  abc += `<tr>
                              <td>
                                ${item.location.shopNumber}
                              </td>
                              <td>
                                ${item.location.pincode}
                              </td>
                              <td>
                                ${item.location.city}
                              </td>
                              <td>
                                ${item.location.state}
                              </td>
                          </tr>`
                })

                abc += `</tbody> </table >`

                $('#moduleDataAppend').append(abc)
                $("#exampleModal").modal("toggle");
              } else {
                alert("data not Found")
              }
            }
          })
        }
      </script>


      <%- include("../../partials/script.ejs") %>
</body>

</html>