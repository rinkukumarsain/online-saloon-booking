            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">User Service Data</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="moduleDataAppend">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
          </div>
        </div>
      </div>


      <script>
        function saloonAdd(data) {
          let num = data.value
          $.ajax({
            type: 'get',
            data: { "id": num },
            url: '/get-saloon-address',
            success: function (data) {
              if (data.length > 0) {
                $('#moduleDataAppend').empty()
                let abc = ` <table class="table datatable">
                          <thead>
                            <tr>
                              <th scope="col">Shop Number</th>
                              <th scope="col">Pin Code</th>
                              <th scope="col">City</th>
                              <th scope="col">State</th>
                            </tr>
                          </thead>
                          <tbody>`
                data.forEach((item) => {
                  abc += `<tr>
                              <td>
                                ${item.location.shopNumber}
                              </td>
                              <td>
                                ${item.location.pincode}
                              </td>
                              <td>
                                ${item.location.city}
                              </td>
                              <td>
                                ${item.location.state}
                              </td>
                          </tr>`
                })

                abc += `</tbody> </table >`

                $('#moduleDataAppend').append(abc)
                $("#exampleModal").modal("toggle");
              } else {
                alert("data not Found")
              }
            }
          })
        }
      </script>


      <%- include("../../partials/script.ejs") %>
