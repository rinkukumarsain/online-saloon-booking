<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>view-saloon</title>
    <%- include('../partials/headlink.ejs') %>
  </head>

  <body>
    <%- include("../partials/alertMsg.ejs") %>
    <%- include('../partials/Header.ejs') %> 
    <%- include("../partials/sidebar.ejs") %>

    <main id="main" class="main">
      <div class="pagetitle">
        <h1><%-user.type %></h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->
     <section class="section dashboard">
      <div class="row">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Saloon List</h5>
  
                <!-- Table with stripped rows -->
                <table class="table datatable">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Store Name</th>
                      <th scope="col">Owner Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone Number</th>
                      <th scope="col">Shop Number</th>
                      <th scope="col">Pin Code</th>
                      <th scope="col">City</th>
                      <th scope="col">State</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i= 0 %>
                    <% for( data of data) { %>
                    <tr>
                      <th scope="row"><%= ++i %></th>
                      <td><%= data.storeName %></td>
                      <td><%= data.name %></td>
                      <td><%= data.Email %></td>
                      <td><%= data.PhoneNumber %></td>
                      <td><%= data.location.shopNumber %></td>
                      <td><%= data.location.pincode %></td>
                      <td><%= data.location.city %></td>
                      <td><%= data.location.state %></td>
                      <td><a href="/saloon-requist-approval?id=<%= data._id%>" class="btn btn-dark">Approval</a>
                        <a href="/saloon-request-delete?id=<%= data._id%>" class="btn btn-danger">Delete</a></td>
                    </tr>
                    <%}%>
                  </tbody>
                </table>
                <!-- End Table with stripped rows -->
  
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>
     
    </main>
    
    <%- include("../partials/script.ejs") %>
  </body>
</html>
