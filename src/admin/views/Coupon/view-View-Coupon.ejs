<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>view-saloon</title>
  <%- include('../../partials/headlink.ejs') %>
</head>

<body>
  <%- include('../../partials/Header.ejs') %>
    <%- include("../../partials/sidebar.ejs") %>

      <main id="main" class="main">
        <div class="pagetitle">
          <h1><%-user.type %></h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->
        <section class="section dashboard">
          <div class="row">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Filter</h5>

                    <!-- No Labels Form -->
                    <form class="row g-3" action="/get-All-order">
                      <div class="col-md-3">
                        <label>Choose City</label> <br>
                        <select id="inputState" name="city" class="form-select">

                          <option selected="" value="">Choose City</option>


                          <option value="ajmer">
                            ajmer
                          </option>

                          <option value="gujrat">
                            gujrat
                          </option>




                        </select>
                      </div>
                      <div class="col-md-3">
                        <label>status</label> <br>
                        <select id="inputState" name="status" class="form-select">

                          <option selected="" value="">Choose Status</option>
                          <option value="pending">pending</option>
                          <option value="cancel">cancel</option>
                          <option value="succes">succes</option>


                        </select>
                      </div>
                      <div class="col-md-3">
                        <label>Enter Amount</label> <br>

                        <input type="number" name="totalamount" class="form-control" value="" placeholder="Amount">

                      </div>
                      <div class="col-md-3">
                        <div class="text-center">
                          <button type="submit" class="btn btn-primary">Submit</button>
                          <a href="/get-All-order"> <button type="button" class="btn btn-secondary">Reset</button></a>
                        </div>
                      </div>
                    </form>
                    <!-- End No Labels Form -->

                  </div>
                </div>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Coupon List</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Titel</th>
                          <th scope="col">CouponCode</th>
                          <th scope="col">StartDate</th>
                          <th scope="col">EndDate</th>
                          <th scope="col">Amount</th>
                          <th scope="col">Limit</th>
                          <th scope="col">Discount</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0 %>
                          <% for( data of data) { %>
                            <tr>
                              <th scope="row">
                                <%= ++i %>
                              </th>
                              <td>
                                <%= data.Titel %>
                              </td>
                              <td>
                                <%= data.CouponCode %>
                              </td>
                              <td>
                                <%= data.StartDate %>
                              </td>
                              <td>
                                <%= data.EndDate %>
                              </td>
                              <td>
                                <%= data.Amount %>
                              </td>
                              <td>
                                <%= data.Limit %>
                              </td>
                              <td>
                                <%= data.Discount %>
                              </td>
                              <td>
                                <a href="/Coupon?id=<%= data._id%>" class="btn btn-info"><i class="ri-edit-box-line"
                                    title="Edit"></i></a>
                                <a href="/Delete-Coupon?id=<%= data._id%>" class="btn btn-danger"><i
                                    class="ri-delete-bin-5-line" title="delete"></i></a>
                              </td>
                            </tr>
                            <%}%>
                      </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                  </div>
                </div>
              </div>
            </div>

          </div>
        </section>

      </main>

      <%- include("../../partials/script.ejs") %>
</body>

</html>