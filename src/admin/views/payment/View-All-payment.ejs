<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>view-saloon</title>
  <%- include('../../partials/headlink.ejs') %>
</head>

<body>
  <%- include('../../partials/Header.ejs') %>
    <%- include("../../partials/sidebar.ejs") %>

      <main id="main" class="main">
        <div class="pagetitle">
          <h1><%-user.type %></h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->
        <section class="section dashboard">
          <div class="row">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Payment List</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th scope="col">#</th>

                          <th scope="col">Customer Name</th>
                          <th scope="col"> Pay Date</th>
                          <th scope="col"> Pay Time</th>
                          <th scope="col">Order</th>
                          <th scope="col">Amount</th>
                          <th scope="col">Payment Status</th>
                          <th scope="col">P O S</th>

                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0 %>
                          <% for( data of data) { %>
                            <tr>
                              <th scope="row">
                                <%= ++i %>
                              </th>

                              <td>
                                <%= data.user.name %>
                              </td>
                              <td>
                                <%= data.Date %>
                              </td>
                              <td>
                                <%= data.Time %>
                              </td>
                              <td>
                                <%= data.order %>
                              </td>
                              <td>
                                <%= data.orderData.amount %>
                              </td>
                              <td>
                                <%= data.payment %>
                              </td>
                              <td>
                                <% if(typeof data.payment_detail.razorpay_payment_id !=="undefined" &&
                                  data.payment_detail.razorpay_payment_id!="" ){%>
                                  <i class="bi bi-star-fill" style="color: gold;"></i>
                                  <%}else{%>
                                    <i class="bi bi-star-fill"></i>
                                    <%}%>
                                      <% if(typeof data.payment_detail.razorpay_order_id !=="undefined" &&
                                        data.payment_detail.razorpay_order_id!="" ){%>
                                        <i class="bi bi-star-fill" style="color: gold;"></i>
                                        <%}else{%>
                                          <i class="bi bi-star-fill"></i>
                                          <%}%>

                                            <% if(typeof data.payment_detail.razorpay_signature !=="undefined" &&
                                              data.payment_detail.razorpay_signature!="" ){%>
                                              <i class="bi bi-star-fill" style="color: gold;"></i>
                                              <%}else{%>
                                                <i class="bi bi-star-fill"></i>
                                                <%}%>
                              </td>
                              <td><a href="/Coupon?id=<%= data._id%>" class="btn btn-dark">Edit</a>
                                <a href="/Delete-payment?id=<%= data._id%>" class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                            <%}%>
                      </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                  </div>
                </div>
              </div>
            </div>

          </div>
        </section>

      </main>

      <%- include("../../partials/script.ejs") %>
</body>

</html>