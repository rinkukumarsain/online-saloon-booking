<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>view-blog</title>
  <%- include('../../partials/headlink.ejs') %>
</head>

<body>
  <%- include('../../partials/Header.ejs') %>
    <%- include("../../partials/sidebar.ejs") %>

      <main id="main" class="main">
        <div class="pagetitle">
          <h1><%-user.type %></h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->
        <section class="section dashboard">
          <div class="row">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Filter</h5>

                    <!-- No Labels Form -->
                    <form class="row g-3" action="/get-All-order">
                      <div class="col-md-3">
                        <label>Choose City</label> <br>
                        <select id="inputState" name="city" class="form-select">

                          <option selected="" value="">Choose City</option>


                          <option value="ajmer">
                            ajmer
                          </option>

                          <option value="gujrat">
                            gujrat
                          </option>




                        </select>
                      </div>
                      <div class="col-md-3">
                        <label>Choose Status</label> <br>
                        <select id="inputState" name="status" class="form-select">

                          <option selected="" value="">select status</option>
                          <option value="pending">pending</option>
                          <option value="cancel">cancel</option>
                          <option value="succes">succes</option>


                        </select>
                      </div>
                      <div class="col-md-3">
                        <label>Enter Amount</label> <br>

                        <input type="number" name="totalamount" class="form-control" value="" placeholder="Enter Amount">

                      </div>
                      <div class="col-md-3">
                        <div class="text-center">
                          <button type="submit" class="btn btn-primary">Submit</button>
                          <a href="/get-All-order"> <button type="button" class="btn btn-secondary">Reset</button></a>
                        </div>
                      </div>
                    </form>
                    <!-- End No Labels Form -->

                  </div>
                </div>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Blog List</h5>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Title</th>
                          <th scope="col">Writer Name</th>
                          <th scope="col">Image</th>
                          <th scope="col">Category</th>
                          <th scope="col">Description</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let i=0 %>
                          <% for( singleData of data) { %>
                            <tr>
                              <th scope="row">
                                <%= ++i %>
                              </th>
                              <td>
                                <%= singleData.Title %>
                              </td>
                              <td>
                                <%= singleData.WriterName %>
                              </td>
                              <td><img src="/uploads/<%= singleData.image[0]%>" width="60px"></td>
                              <td>
                                <%= singleData.category_name %>
                              </td>
                              <td> <button type="button" value="<%= singleData._id %>" onclick="ViwesFindBlog(this)"
                                  class="btn btn-info"><i class="bi bi-eye"></i></button></td>

                              <td> <a href="/add_blog?id=<%= singleData._id%>" class="btn btn-info"><i
                                    class="ri-edit-box-line" title="Edit"></i></a>
                                <a href="/delete_blog?id=<%= singleData._id%>" class="btn btn-danger"><i
                                    class="ri-delete-bin-5-line" title="delete"></i></a>
                              </td>
                            </tr>
                            <%}%>
                      </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                  </div>
                </div>
              </div>
            </div>

          </div>
        </section>

      </main>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">User Service Data</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="moduleDataAppend">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
          </div>
        </div>
      </div>
      <script>
        function ViwesFindBlog(data) {
          let num = data.value

          $.ajax({
            type: 'get',
            data: { "id": num },
            url: '/Viwes-Find-Blog',
            success: function (data) {
              if (data.length > 0) {
                $('#moduleDataAppend').empty()
                let abc = "";
                data.forEach((item) => {
                  abc += ` <h2 style="text-align: center;"> ${item.Title}</h2>`
                  abc += item.Description
                })
                $('#moduleDataAppend').append(abc)
                $("#exampleModal").modal("toggle");
              } else {
                alert("data not Found")
              }
            }
          })
        }
      </script>
      <%- include("../../partials/script.ejs") %>
</body>

</html>